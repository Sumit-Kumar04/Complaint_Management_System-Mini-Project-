  <form action="/user/<%= user._id %>/delete?_method=DELETE" method="POST" onsubmit="return confirmDelete()">
    <div class="container my-5">
      <div class="card shadow-sm p-4 text-center col-md-6 mx-auto">
        <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" 
             alt="User Avatar" class="rounded-circle mx-auto d-block" width="100">

        <h3 class="mt-3"><%= user.name %></h3>
        <p class="text-muted">+91 <%= user.phone %></p>

        <button type="submit" class="btn btn-danger mt-3">
          Delete Account
        </button>
      </div>
    </div>
  </form>
   <script>
    function confirmDelete() {
      return confirm("Are you sure you want to delete your account? This action cannot be undone.");
    }
    </script>