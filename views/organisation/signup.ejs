

  <style>
    body {
      background: linear-gradient(120deg, #eeeff0, #a2dded);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .signup-container {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .signup-card {
      background: #fff;
      border-radius: 15px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 450px;
      padding: 2rem;
    }

    .btn-signup {
      background: linear-gradient(120deg, #0072ff, #00c6ff);
      border: none;
      font-weight: 600;
    }

    .btn-signup:hover {
      opacity: 0.9;
    }

    .link-primary {
      color: #0072ff !important;
      font-weight: 500;
    }
  </style>


<body>

  <!-- Organisation Signup Card -->
  <div class="signup-container mt-4 mb-4" style="margin-top:120px;">
    <div class="signup-card text-center">
      <div class="mb-3">
        <i class="bi bi-building-add" style="font-size: 3rem; color: #0072ff;"></i>
      </div>
      <h3>Organisation Signup</h3>
      <p class="text-muted mb-4">Register your organisation with Settler</p>

      <form action="/organisation/signup" method="POST">
        <div class="mb-3 text-start">
          <label for="name" class="form-label fw-semibold">Organisation Name</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter organisation name" required>
        </div>

        <div class="mb-3 text-start">
          <label for="email" class="form-label fw-semibold">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter organisation email" required>
        </div>

        <div class="mb-3 text-start">
          <label for="password" class="form-label fw-semibold">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter a password" required>
        </div>

        <div class="mb-3 text-start">
          <label for="location" class="form-label fw-semibold">Location</label>
          <input type="text" id="location" name="location" class="form-control" placeholder="Enter organisation location" required>
        </div>

        <button type="submit" class="btn btn-signup text-white w-100 py-2">Register</button>
      </form>

      <p class="mt-4 mb-0 small text-muted">
        Already have an account? <a href="/organisation/login" class="link-primary text-decoration-none">Login here</a>
      </p>
    </div>
  </div>

</body>

