<body>

  <!-- Organisation Login Card -->
  <div class="login-container mt-4 mb-4" style="margin-top:120px;">
    <div class="login-card text-center">
      <div class="mb-3">
        <i class="bi bi-building" style="font-size: 3rem; color: #0072ff;"></i>
      </div>
      <h3>Organisation Login</h3>
      <p class="text-muted mb-4">Access your organisation dashboard</p>

      <form action="/organisation/login" method="POST">
        <div class="mb-3 text-start">
          <label for="email" class="form-label fw-semibold">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter organisation email" required>
        </div>
        <div class="mb-3 text-start">
          <label for="password" class="form-label fw-semibold">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required>
        </div>
        <button type="submit" class="btn btn-login text-white w-100 py-2">Login</button>
      </form>

      <p class="mt-4 mb-0 small text-muted">
        Back to <a href="/user/login" class="link-primary text-decoration-none">User Login</a>
      </p>
    </div>
  </div>

